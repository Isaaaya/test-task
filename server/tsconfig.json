{
	"compilerOptions": {
	  "module": "CommonJS",   // This is important for Node.js compatibility
	  "outDir": "./dist",     // Ensure TypeScript compiles to the dist folder
	  "rootDir": ".",         // Root directory for the source files
	  "target": "ES6",        // Target modern JavaScript for Node.js
	  "strict": true,
	  "skipLibCheck": true
	},
	"include": [
	  "index.ts",             // Include index.ts for compilation
	  "routes/**/*.ts"        // Include all `.ts` files in the routes folder
	],
	"exclude": [
	  "dist"                  // Exclude compiled files in the dist folder
	]
  }
  
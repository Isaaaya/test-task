{
	"compilerOptions": {
	  "outDir": "./dist",  // Output compiled files into `dist` folder
	  "rootDir": ".",  // Root directory for TypeScript source files (current directory)
	  "module": "CommonJS",
	  "target": "ES6",
	  "strict": true
	},
	"include": [
	  "index.ts",  // Include index.ts
	  "routes/**/*.ts"  // Include all `.ts` files in the `routes` folder
	],
	"exclude": [
	  "dist"  // Exclude compiled files in the dist folder
	]
  }
  